@{
    ViewData["Title"] = "Đăng nhập";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập</title>
    <link href="~/css/style.min.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <style>
        .divider:after,
        .divider:before {
        content: "";
        flex: 1;
        height: 1px;
        background: #dbdbdb;
        }
        .h-custom {
        height: calc(100% - 73px);
        }
    </style>
</head>
<body>
    <section class="vh-100">
        <div class="container-fluid h-custom" style="height: 100%;">
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="~/img/bg_login.png" 
                class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
              <form>
                <div class="text-center">
                    <h3 class="mb-5" style="font-size: 50px;">Sign in</h3>
                </div>
                
                
                <!-- Email input -->
                <div class="form-outline mb-4">
                  <input type="email" id="form3Example3" class="form-control form-control-lg" style="border-radius: 8px;"
                        placeholder="Enter Username" />
                </div>
      
                <!-- Password input -->
                <div class="form-outline mb-3">
                  <input type="password" id="form3Example4" class="form-control form-control-lg" style="border-radius: 8px;"
                    placeholder="Enter Password" />
                </div>
      
                <div class="d-flex justify-content-between align-items-center">
                  <!-- Checkbox -->
                  <div class="form-check mb-0" style="padding-top: 6px;">
                    <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3" />
                    <label class="form-check-label" for="form2Example3" >
                      Remember me
                    </label>
                  </div>
                  <a href="#!" class="text-body" style="padding-top: 6px;">Forgot password?</a>
                </div>
                        <p class="small fw-bold mt-2 pt-1 mb-0">Don't have an account? <a href="~/Users/Create" class="link-danger">Register</a></p>
                <div class="text-center text-lg-start mt-4" >
                  <button type="button" class="btn btn-primary btn-lg"
                    style="width: 100%; border-radius: 8px;">Login</button>
                  
                </div>
                <div class="divider d-flex align-items-center my-4">
                    <p class="text-center fw-bold mx-3 mb-0" style="font-size: 20px;">Or</p>
                  </div>
                <button class="btn btn-lg btn-block " 
                style="background-color: #dd4b39; color: rgb(235, 235, 235); border-radius: 8px; border-color:#dd4b39; "
                type="submit"><i class="fab fa-google me-2" style="color: aliceblue;"></i> Sign in with google</button>

                <button class="btn btn-lg btn-block mb-2" style="background-color: #3b5998; color: rgb(235, 235, 235); border-radius: 8px; border-color: #3b5998;"
                type="submit"><i class="fab fa-facebook-f me-2" style="color: aliceblue;"></i> Sign in with facebook</button>
              </form>
            </div>
          </div>
        </div>
      </section>
</body>
</html>